import { <%= Name %>Link } from './<%= Name %>.link';

Enzyme.configure({ adapter: new Adapter() });

describe('<%= [FeatureName.split('/').join('::'), 'Link'].filter(Boolean).join('::') %>::<%= Name %>Link', function() {
  let props;

  beforeEach(function() {
    props = {};
  });

  function renderDoc(override = {}) {
    return shallow(<<%= Name %>Link {...props} {...override} />);
  }

  it('does not throw an error on render', function() {
    expect(renderDoc).not.to.throw(Error);
  });
});
